{
    "extends": "./node_modules/@plentymarkets/terra-lint-rules/tslint-rules.json",
    "rulesDirectory": [
        "node_modules/codelyzer",
        "node_modules/tslint-eslint-rules/dist/rules",
        "node_modules/@plentymarkets/terra-lint-rules"
    ],
    "rules": {
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            },
            {
                "call-signature": "onespace",
                "index-signature": "onespace",
                "parameter": "onespace",
                "property-declaration": "onespace",
                "variable-declaration": "onespace"
            }
        ],
        "brace-style": false,
        "whitespace": [true, "check-decl", "check-module", "check-operator", "check-separator"],
        "semicolon": false
    }
}
