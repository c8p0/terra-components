{
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
//	"extends": [
//		"eslint:recommended",
//		"plugin:@typescript-eslint/eslint-recommended",
//		"plugin:@typescript-eslint/recommended"
//	],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint"
	],
	"rules": {
		"curly": ["error", "all"],
		"guard-for-in": ["error"],
		"indent": ["error", 4],
		"object-curly-newline": ["error", { "ObjectExpression": "always", "ObjectPattern": { "multiline": true }, "ImportDeclaration": {"multiline": true, "minProperties": 2}, "ExportDeclaration": { "multiline": true, "minProperties": 3 } }],
		"max-lines": ["error", { "max": 450 }],
		"max-lines-per-function": ["error", { "max": 75 }],
		"max-len": ["error", { "code": 150, "ignorePattern": "^import |^export \\{(.*?)\\} | class [a-zA-Z]+ implements" }],
		"max-depth": ["error", { "max": 5 }],
		"no-multiple-empty-lines": ["error", { "max": 1, "maxBOF": 0, "maxEOF": 1 }],
		"spaced-comment": ["error", "always"],
		"@typescript-eslint/array-type": ["error", "generic"],
		"@typescript-eslint/class-name-casing": ["error"],
		"@typescript-eslint/no-explicit-any": ["error"],
		"@typescript-eslint/type-annotation-spacing": ["error", { "before": false, "after": false, "overrides": { "arrow": { "before": true, "after": true }} }]
	}
}
