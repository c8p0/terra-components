{
	"rules": {
		"restrict-leading-underscore": true,
		"get-set": true,

		"variable-name": [
			true,
			"ban-keywords",
			"allow-leading-underscore"
		],
		"whitespace": [
			true,
			"check-decl",
			"check-module",
			"check-operator",
			"check-separator",
			"check-typecast"
		],




		// angular codelyzer rules
		// Future ESLint compatibility: https://github.com/mgechev/codelyzer/issues/763
		// angular-eslint: https://github.com/angular-eslint/angular-eslint
		"component-class-suffix": [true, "Component", "ComponentExample", "DirectiveExample"],
		"component-max-inline-declarations": [
			true,
			{
				"animations": 20,
				"styles": 1,
				"template": 1
			}
		],
		"component-selector": [
			true,
			"element",
			["terra", "tc"],
			"kebab-case"
		],
		"directive-class-suffix": [true, "Directive"],
		"directive-selector": [
			true,
			"attribute",
			"",
			"camelCase"
		],
//		"no-inputs-metadata-property": true,
//		"no-outputs-metadata-property": true,
//		"no-host-metadata-property": true,
		"no-input-rename": true,
		"no-output-rename": true,
		"no-output-on-prefix": true,
		"use-lifecycle-interface": true,
		"use-pipe-transform-interface": true,
		"prefer-for-of": true,
		"brace-style": [
			true,
			"allman",
			{
				"allowSingleLine": false
			}
		]
	}
}
